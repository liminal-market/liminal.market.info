{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "app/js",
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "Handlebars": [
        "./app/node_modules/handlebars"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/html/*.html"],
  "files": ["./src/.d.ts",
    "./src/main.ts","./src/html.d.ts"
  ],
  "compileOnSave": true
}